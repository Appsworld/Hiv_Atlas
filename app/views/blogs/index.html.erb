<h1>Listing blogs</h1>

<table>
  <tr>
    
    <th>Title</th>
    <th>Content</th>
    <th>Like</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <p> Auther : <%= blog.user.email if current_user %> <br/> </p> 
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.like %></td>
    <td><%= link_to 'Show', blog_path(blog) %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

